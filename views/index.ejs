<!DOCTYPE html>
<html>
    <head>
        <title> Heroes4Hire </title>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <link rel="stylesheet" href="/styles.css" type="text/css" />
    </head>
    <body>
        <h1>Heroes4Hire:</h1>
        
        <form action="/ajax/searchHero">
            <label for="searchTerm">
                Keyword: <input id="searchTerm" name="searchTerm" type="text" >
            </label>
            <label>
                Universe: 
                <select id="searchUniverse" name="universe">
                    <option value=""> Select One </option>
                    <option value="Marvel"> Marvel </option>
                    <option value="DC"> DC </option>
                </select>
            </label>
            <label>
                Gender: 
                <select id="searchGender" name="gender">
                    <option value=""> Select One </option>
                    <option value="M"> Male </option>
                    <option value="F"> Female </option>
                </select>
            </label>
            <input class="js-search-btn" type='submit' value='Search'>
        </form>
         
        <div class="flex-container js-heroes-container">
            <% heroesList.forEach(function(hero){  %>
            
            
            <div class="hero-container js-select-hero" id="<%= hero.heroId %>">
                <figure>
                    <img class="thumbnail-img" src="<%= hero.imageURL %>" alt="Hero Image"/>
                    <figcaption>
                        <p>Hero: <%= hero.name %></p>
                        <p>Alias: <%= hero.alias %></p>
                        <p>Universe: <%= hero.universe %></p>
                        <p>Group: <%= hero.group %></p>
                    </figcaption>
                    <br>
                </figure>
            </div>
            
            <% }) %>
        </div>
        
        <!--<h1> Admin Section </h1>-->

        <form action="/login">
          <button> Admin Login </button>
        </form>
        
     
      <!-- Modal -->
        <div class="modal fade" id="heroModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><h1 id="heroName"></h1></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                
                 <div>
                     <figure>
                        <img id="heroImg" src="">
                        <figcaption>
                            <h1 id="heroName"></h1>
                            <p id="bio"></p>
                        </figcaption>
                    </figure>
                </div>
                
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
        
       <script type="text/javascript" src="/scripts.js"></script>
    </body>
</html>