        <h1> Updating Hero </h1>
        

        <form method="POST">
        
            Name: <input type="text" name="name"
                        value="<%= heroInfo.name %>"><br>    
            Alias: <input type="text" name="alias"
                        value="<%= heroInfo.alias %>"><br>
            Gender: <input type="radio" name="gender" value="F" 
                         <%= heroInfo.gender == 'F'?"checked":"" %>
                        >Female
                    <input type="radio" name="gender" value="M"
                       <%= heroInfo.gender == 'M'?"checked":"" %>
                    >Male <br>
            Universe: <input type="text" name="universe"
                        value="<%= heroInfo.universe %>"><br>
            Image: <input type="text" name="image"
                        value="<%= heroInfo.imageURL %>"><br>
            Info: <input type="text" name="info"
                        value="<%= heroInfo.information %>"><br>
            Price: <input type="int" name="price"
                        value="<%= heroInfo.price%>"><br>
                    
            <input type="hidden" name="heroId" value="<%= heroInfo.heroId %>"> 
            
            <br><br>
            <button>Update Hero</button>
        
            <%= typeof(message) != "undefined"?message:"" %>
            
        </form>        

        <br>
        <form action="/admin">
            <button>
                Return to admin
            </button>
        </form>
        
    </body>
